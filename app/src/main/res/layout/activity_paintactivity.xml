<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yo.a12week.paintactivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_weight="1"
            android:text="Stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/erase"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="ERASE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/open"
            android:layout_weight="1"

            android:onClick="onClick"
            android:text="OPEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/save"
            android:layout_weight="1"

            android:onClick="onClick"
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <com.example.yo.a12week.MyPainter
        android:id="@+id/mypainter"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/rotate"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="ROTATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/move"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="MOVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:id="@+id/scale"
            android:onClick="onClick"
            android:text="SCALE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/skew"
            android:layout_weight="1"

            android:onClick="onClick"
            android:text="SKEW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
